<% if @accounts.present? %>
  <% @accounts.each do |account| %>
    <ul>
      <li>Name: <%= link_to account.name, account_path(account.id) %></li>
      <li>
        <%= link_to t('global.delete'), account_path(account.id), method: :delete, class: 'pull-left' %>
      </li>
    </ul>
  <% end %>
<% end %>

<div>
  <%= link_to t('.create_an_account'), new_account_path, class: 'btn btn-danger' %>
</div>
